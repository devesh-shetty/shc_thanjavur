<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="shctnj0407.wixsite.com.shc_thanjavur.MainActivity"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/indigoShade">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/ic_cathedral_icon"
        fab:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView"
        android:contentDescription="@string/imagechurch"
        android:adjustViewBounds="true"
        android:layout_marginEnd="16dp"
        fab:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        fab:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        fab:layout_constraintBottom_toBottomOf="@+id/right_labels" />

    <TextView
        android:text="SHC Thanjavur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        fab:layout_constraintTop_toBottomOf="@+id/imageView"
        fab:layout_constraintLeft_toLeftOf="parent"
        fab:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/right_labels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_addButtonColorNormal="@color/white"
        fab:fab_addButtonColorPressed="@color/white_pressed"
        fab:fab_addButtonPlusIconColor="@color/half_black"
        fab:fab_addButtonSize="mini"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_labelsPosition="left"
        fab:layout_constraintRight_toRightOf="parent"
        fab:layout_constraintBottom_toBottomOf="parent">


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="@string/gallery"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_icon="@drawable/ic_wallpaper_black_24dp"

            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_church_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_title="@string/church_history"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_size="mini"
            fab:fab_icon="@drawable/ic_cathedral_icon" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_mass_timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/white"
            fab:fab_size="mini"
            fab:fab_title="@string/mass_timing"
            fab:fab_colorPressed="@color/white_pressed"
            fab:fab_icon="@drawable/ic_access_time_black_24dp" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</android.support.constraint.ConstraintLayout>
